<div>
  <div>
    <h1><%= @recipe.name %></h1>
    <% if current_user == @recipe.user %>
      <div role="group" aria-label="Recipe Visibility">
        <%= button_to recipe_path(@recipe.id), :method => :patch do %>
          <% if @recipe.public %>
            Public
          <% else %>
            Private
          <% end %>
        <% end %>
      </div>
    <% end %>

    <p>Preparation time: <%= @recipe.preparation_time %> <%= "hour".pluralize(@recipe.preparation_time) %></p>
    <p>Cooking time: <%= @recipe.cooking_time %> <%= "hour".pluralize(@recipe.cooking_time) %></p>
    <p><%= @recipe.description %></p>
  </div>

  <% if current_user == @recipe.user %>
    <div>
      <%= link_to "Generate Shopping List", shopping_lists_path %>
      <%= link_to "Add Ingredient", new_recipe_recipe_food_path(@recipe.id) %>
    </div>
  <% end %>

  <div>
    <table>
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Value</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @recipe_foods&.each_with_index do |recipe_food, i| %>
          <tr>
            <td><%= recipe_food.food.name %></td>
            <td><%= recipe_food.quantity %></td>
            <td><%= recipe_food.food.price * recipe_food.quantity %></td>
            <td>
              <%= button_to "Delete", recipe_recipe_food_path(@recipe, recipe_food), method: :delete %>
              <%= link_to "Edit", edit_recipe_recipe_food_path(@recipe, recipe_food) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if flash[:success].present? %>
    <p><%= flash[:success] %></p>
  <% end %>
</div>
