
  <h1>Create a new Recipe</h1>

  <%= form_with model: [@recipe], data: { turbo: false }, local: true do |f| %>
    <div>
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true %>
      <%= f.label :preparation_time %><br>
      <%= f.number_field :preparation_time, required: true, step: 0.1 %>
      <%= f.label :cooking_time %><br>
      <%= f.number_field :cooking_time, required: true, step: 0.1 %>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
      <%= f.check_box :public %>
      <%= f.label :public %>
    <%= f.submit "Create Recipe" %>
    </div>
  <% end %>